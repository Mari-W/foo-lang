fn arg(idx: Int) -> Str {~
    use std::env;
    use std::convert::TryFrom;
    // ignore first two, these are cli binary & main file path
    env::args().collect::<Vec<String>>()[usize::try_from(idx).unwrap()].clone()
~}

fn args_len() -> Int {~
    use std::env;
    use std::convert::TryInto;
    env::args().len().try_into().unwrap()
~}
